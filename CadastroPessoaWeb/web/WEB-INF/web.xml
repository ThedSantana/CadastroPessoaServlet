<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <filter>
        <filter-name>LoginFiltro</filter-name>
        <filter-class>br.grupointegrado.cadastroPessoa.LoginFiltro</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFiltro</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>ConsultaServlet</servlet-name>
        <servlet-class>br.grupointegrado.cadastroPessoa.ConsultaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExcluirServlet</servlet-name>
        <servlet-class>br.grupointegrado.cadastroPessoa.ExcluirServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AlterarServlet</servlet-name>
        <servlet-class>br.grupointegrado.cadastroPessoa.AlterarServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>br.grupointegrado.cadastroPessoa.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConsultaServlet</servlet-name>
        <url-pattern>/ConsultaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExcluirServlet</servlet-name>
        <url-pattern>/ExcluirServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AlterarServlet</servlet-name>
        <url-pattern>/AlterarServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
